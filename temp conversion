    class Temperature:
    def convert_to_fahrenheit(self, celsius):
        fahrenheit = (celsius * 9/5) + 32
        return fahrenheit
temp_converter = Temperature()
celsius_temperature = 25
fahrenheit_temperature = temp_converter.convert_to_fahrenheit(celsius_temperature)
print(f"{celsius_temperature}Â°C is equal to {fahrenheit_temperature}Â°F")


#convert fahreinhert to celsius
class Temperature:
    def __init__(self, fahrenheit):
        self.fahrenheit = fahrenheit

    def to_celsius(self):
        celsius = (self.fahrenheit - 32) * 5/9
        return celsius

fahrenheit_temp = 68 
temp = Temperature(fahrenheit_temp)
celsius_temp = temp.to_celsius()
print(f"{fahrenheit_temp} degrees Fahrenheit is {celsius_temp} degrees Celsius.")
    
