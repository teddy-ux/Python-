# area of a rectangle
class rectangle():
def_init_(self,width,length):
self.width=width
self.length=length
def area(self):
    return self.width*self.length
    x=int(input("enter width of rectangle:"))
    y=int(input("enter length of rectangle:")
    obj=rectangle(x,y)
    print("area of rectangle",obj.area())
    print()

#perimeter of a rectangle
class rectangle():
def_init_(self,width,length):
self.width=width
self.length=length
def perimeter(self):
    return 2*(self.length+self.width)
    x=int(input("enter width of rectangle:"))
    y=int(input("enter length of rectangle:")
    obj=rectangle(x,y)
    print("perimeter of rectangle",obj.area())
    print()
